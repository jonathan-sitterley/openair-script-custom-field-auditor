{
  "manifest_version": 3,
  "name": "Suite Projects Pro Script Custom Field Audit",
  "version": "2.0",
  "description": "Validate Suite Projects Pro custom fields used in the script and audit the 'Selected Custom Fields' list",
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://*.app.sandbox.netsuitesuiteprojectspro.com/*",
        "https://*.app.netsuitesuiteprojectspro.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/custom_field_audit.png"
  }
}